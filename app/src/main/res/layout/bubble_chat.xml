<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/pic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_avatar0"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/formChat"
        android:layout_toRightOf="@id/cardPic"
        android:layout_width="wrap_content"
        android:layout_margin="14dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorGray">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/chatName"
                android:layout_above="@id/chatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Nama"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nunintosans"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/chatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nunintosans"
                android:hint="Masukan chat diskusi Anda..."
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>